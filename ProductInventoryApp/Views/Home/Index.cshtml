@model List<ProductInventoryApp.Models.Product>

@{
	ViewData["Title"] = "Home Page";
}

<div class="p-3">
	<h2>Dashboard</h2>
	<div class="row mt-4">
		<div class="col-md-3">
			<div class="card bg-primary text-light">
				<div class="card-header">
					Total Items
				</div>
				<div class="card-body">
					<h5 class="card-title">@ViewBag.TotalItems</h5>
				</div>
			</div>
		</div>
		<div class="col-md-3">
			<div class="card bg-success text-light">
				<div class="card-header">
					Total Categories
				</div>
				<div class="card-body">
					<h5 class="card-title">@ViewBag.TotalCategories</h5>
				</div>
			</div>
		</div>
		<div class="col-md-3">
			<div class="card bg-warning text-light">
				<div class="card-header">
					Total Quantities
				</div>
				<div class="card-body">
					<h5 class="card-title">@ViewBag.TotalQuantity</h5>
				</div>
			</div>
		</div>
		<div class="col-md-3">
			<div class="card bg-danger text-light">
				<div class="card-header">
					Tatal Stock Value
				</div>
				<div class="card-body">
					<h5 class="card-title">@ViewBag.TotalValue</h5>
				</div>
			</div>
		</div>
	</div>
</div>
