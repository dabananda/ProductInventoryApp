@model IEnumerable<Category>

@{
	ViewData["Title"] = "Categories";
}

<div class="container p-4">
	<div class="d-flex justify-content-between align-items-center mb-4">
		<h2>Categories</h2>
		<a asp-controller="Category" asp-action="Create" class="btn btn-primary">
			<i class="bi bi-plus-circle me-1"></i> Add New Category
		</a>
	</div>

	<div class="card shadow">
		<div class="card-body">
			<table class="table table-striped">
				<thead>
					<tr>
						<th>ID</th>
						<th>Name</th>
						<th>Description</th>
						<th>Products Count</th>
						<th>Actions</th>
					</tr>
				</thead>
				<tbody>
					@foreach (var category in Model)
					{
						<tr>
							<td>@category.Id</td>
							<td>@category.Name</td>
							<td>@category.Description</td>
							<td>@(category.Products?.Count ?? 0)</td>
							<td>
								<a class="btn btn-dark btn-sm me-2" asp-controller="Category" asp-action="Edit" asp-route-id="@category.Id">
									<i class="bi bi-pencil"></i> Edit
								</a>
								<a class="btn btn-danger btn-sm" asp-controller="Category" asp-action="Delete" asp-route-id="@category.Id"
								   onclick="return confirm('Are you sure you want to delete this category?');">
									<i class="bi bi-trash"></i> Delete
								</a>
							</td>
						</tr>
					}
				</tbody>
			</table>
		</div>
	</div>
</div>