<!DOCTYPE html>
<html lang="en">
<head>
	<meta charset="utf-8" />
	<meta name="viewport" content="width=device-width, initial-scale=1.0" />
	<title>@ViewData["Title"]</title>
	<link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
	<link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
	<link rel="stylesheet" href="~/ProductInventoryApp.styles.css" asp-append-version="true" />
	<style>
		body, html {
			height: 100%;
			margin: 0;
		}

		.layout-container {
			display: flex;
			height: 100vh;
			overflow: hidden;
		}

		.menu {
			width: 20%;
			background-color: #f8f9fa;
			box-shadow: 2px 0 5px rgba(0, 0, 0, 0.1);
		}

		.menu .navbar {
			height: 100%;
			flex-direction: column;
			align-items: flex-start;
		}

		.menu .navbar-collapse {
			align-items: start;
		}

		.menu .navbar-nav {
			flex-direction: column;
			width: 100%;
		}

		.menu .nav-link {
			width: 100%;
			text-align: left;
		}

		.content {
			width: 75%;
			overflow-y: auto;
			padding: 20px;
			background-color: #ffffff;
		}
	</style>
</head>
<body>
	<div class="layout-container">
		<div class="menu p-2">
			<nav class="navbar navbar-expand-sm navbar-light">
				<a class="navbar-brand" asp-controller="Home" asp-action="Index">Product Inventory</a>
				<hr class="w-100" />
				<div class="navbar-collapse">
					<ul class="navbar-nav">
						<li class="nav-item">
							<a class="nav-link text-dark" asp-controller="Home" asp-action="Index">Dashboard</a>
						</li>
						<li class="nav-item">
							<a class="nav-link text-dark" asp-controller="Product" asp-action="Index">Products</a>
						</li>
						<li class="nav-item">
							<a class="nav-link text-dark" asp-controller="Product" asp-action="Create">Add Product</a>
						</li>
					</ul>
				</div>
			</nav>
		</div>
		<div class="content">
			<main role="main" class="pb-3">
				@RenderBody()
			</main>
		</div>
	</div>
	<script src="~/lib/jquery/dist/jquery.min.js"></script>
	<script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
	<script src="~/js/site.js" asp-append-version="true"></script>
	@await RenderSectionAsync("Scripts", required: false)
</body>
</html>
