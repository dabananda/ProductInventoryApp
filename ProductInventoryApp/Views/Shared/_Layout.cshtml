<!DOCTYPE html>
<html lang="en">
<head>
	<meta charset="utf-8" />
	<meta name="viewport" content="width=device-width, initial-scale=1.0" />
	<title>@ViewData["Title"]</title>
	<link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
	<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">
	<link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
	<link rel="stylesheet" href="~/ProductInventoryApp.styles.css" asp-append-version="true" />
	<style>
		body, html {
			height: 100%;
			margin: 0;
		}

		.layout-container {
			display: flex;
			height: 100vh;
			overflow: hidden;
		}

		.menu {
			width: 20%;
			box-shadow: 2px 0 5px rgba(0, 0, 0, 0.1);
		}

		.menu .navbar {
			height: 100%;
			flex-direction: column;
			align-items: flex-start;
		}

		.menu .navbar-collapse {
			align-items: start;
		}

		.menu .navbar-nav {
			flex-direction: column;
			width: 100%;
		}

		.menu .nav-link {
			width: 100%;
			text-align: left;
		}

		.content {
			width: 75%;
			overflow-y: auto;
		}
	</style>
</head>
<body>
	<div>
		<nav class="navbar navbar-expand-lg bg-dark" data-bs-theme="dark">
			<div class="container-fluid">
				<a class="navbar-brand text-light">Inventory</a>
				<button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
					<span class="navbar-toggler-icon"></span>
				</button>
				<div class="collapse navbar-collapse" id="navbarSupportedContent">
					<ul class="navbar-nav me-auto mb-lg-0">
						<li class="nav-item">
							<a class="nav-link text-light">Home</a>
						</li>
						<li class="nav-item">
							<a class="nav-link text-light">Link</a>
						</li>
					</ul>
					<form class="d-flex" role="search">
						<div class="input-group me-3">
							<input class="form-control" type="search" placeholder="Search...">
							<button class="btn bg-primary" type="submit">
								<i class="bi bi-search text-light"></i>
							</button>
						</div>
					</form>
					<div class="dropdown position-static">
						<button class="btn btn-dark dropdown-toggle" type="button" id="dropdownMenuButton" data-bs-toggle="dropdown" aria-expanded="false">
							<i class="bi bi-person-fill"></i>
						</button>
						<ul class="dropdown-menu dropdown-menu-end dropdown-menu-dark" aria-labelledby="dropdownMenuButton">
							<li><a class="dropdown-item" href="#">Settings</a></li>
							<li><a class="dropdown-item" href="#">Logout</a></li>
						</ul>
					</div>
				</div>
			</div>
		</nav>
		<div class="layout-container">
			<div class="menu p-2 bg-dark">
				<nav class="navbar navbar-expand-sm navbar-light">
					<div class="bg-light w-100 p-2 rounded">
						<img class="rounded me-3" width="50" src="https://res.cloudinary.com/djz3p8sux/image/upload/v1734879900/portfolio-files/dabananda_mitra_Custom_nfc3jx.png" alt="Profile picture" />
						<a class="navbar-brand" asp-controller="Home" asp-action="Index">Dabananda Mitra</a>
					</div>
					<hr class="w-100" />
					<div class="navbar-collapse">
						<ul class="navbar-nav">
							<li class="nav-item">
								<a class="nav-link text-light" asp-controller="Home" asp-action="Index">Dashboard</a>
							</li>
							<li class="nav-item">
								<a class="nav-link text-light" asp-controller="Product" asp-action="Index">Products</a>
							</li>
							<li class="nav-item">
								<a class="nav-link text-light" asp-controller="Product" asp-action="Create">Add Product</a>
							</li>
						</ul>
					</div>
				</nav>
			</div>
			<div class="content container">
				<main role="main">
					@RenderBody()
				</main>
			</div>
		</div>
	</div>
	<script src="~/lib/jquery/dist/jquery.min.js"></script>
	<script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
	<script src="~/js/site.js" asp-append-version="true"></script>
	@await RenderSectionAsync("Scripts", required: false)
</body>
</html>
